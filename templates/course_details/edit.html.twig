{% extends 'base.html.twig' %}

{% block body %}
	<div class="container edit-details-cours">
		<h1>Modifier l'activit√©</h1>

		{{ form_start(form) }}
		<div class="form-group mt-3">
			{{ form_label(form.photo) }}
			{{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
		</div>
		<div class="form-group mt-3">
			{{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group mt-3">
			{{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group mt-3">
			{{ form_label(form.benefits, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.benefits, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group mt-3">
			{{ form_label(form.photobenefits) }}
			{{ form_widget(form.photobenefits, {'attr': {'class': 'form-control-file'}}) }}
		</div>
		<button type="submit" class="btn btn-general mt-3 mb-3">Enregistrer</button>
		<a href="{{ path('course_details_list') }}" class="btn complet mt-3 mb-3">Annuler</a>
		{{ form_end(form) }}

	</div>
{% endblock %}
