{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-5">
		<h1>Modifier l'activit√©</h1>

		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.description, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.benefits, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.benefits, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.photo) }}
			{{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
		</div>
		<button type="submit" class="btn btn-primary">Enregistrer</button>
		{{ form_end(form) }}

		<a href="{{ path('course_details_list') }}" class="btn btn-secondary mt-3">Annuler</a>
	</div>
{% endblock %}
