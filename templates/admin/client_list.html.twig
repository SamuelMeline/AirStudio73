{% extends 'base.html.twig' %}

{% block body %}
	<div class="container mt-5">
		<h1>Liste des Clients</h1>
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>ID</th>
					<th>Email</th>
					<th>Prénom</th>
					<th>Nom</th>
					<th>Numéro de téléphone</th>
					<th>Adresse postale</th>
					<th>Notes</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.firstName }}</td>
						<td>{{ user.lastName }}</td>
						<td>{{ user.phoneNumber }}</td>
						<td>{{ user.address }}</td>
						<td>
							<textarea class="form-control editable-notes" data-id="{{ user.id }}" rows="5">{{ user.notes }}</textarea>
						</td>
						<td>
							<a href="{{ path('admin_client_edit', {'id': user.id}) }}" class="btn btn-info btn-sm">Modifier</a>
							<a href="{{ path('admin_client_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm mt-1" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');">Supprimer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">Aucun client trouvé.</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<a href="{{ path('admin_client_new') }}" class="btn reserve-btn mb-3">Ajouter un nouveau client</a>
	</div>
	<script>
		document.querySelectorAll('.editable-notes').forEach(function (textarea) {
textarea.addEventListener('blur', function () {
var userId = this.getAttribute('data-id');
var newNotes = this.value;

fetch (`/admin/clients/${userId}/edit_notes`, {
method: 'POST',
headers: {
'Content-Type': 'application/x-www-form-urlencoded',
'X-Requested-With': 'XMLHttpRequest', // Indique que la requête est AJAX
},
body: `notes=${
encodeURIComponent(newNotes)
}`
}).then(response => {});
});
});
	</script>
{% endblock %}
