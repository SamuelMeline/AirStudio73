{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-header">
						<h1 class="card-title">Connexion</h1>
					</div>
					<div class="card-body">
						<form method="post">
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							{% if app.user %}
								<div class="mb-3">
									Connecté avec :
									{{ app.user.userIdentifier }},
									<a href="{{ path('app_logout') }}">Se déconnecter</a>
								</div>
							{% endif %}

							<div class="form-group">
								<label for="username">Email</label>
								<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
							</div>
							<div class="form-group">
								<label for="password">Mot de passe</label>
								<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<div class="form-check mb-3">
								<input type="checkbox" name="_remember_me" id="_remember_me" class="form-check-input">
								<label for="_remember_me" class="form-check-label">Se souvenir de moi</label>
							</div>

							<button class="btn btn-lg btn-primary btn-block" type="submit">
								Se connecter
							</button>
						</form>
						<div class="text-center mt-3">
							<a href="{{ path('app_register') }}">Pas encore de compte ? Inscris-toi !</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
