{% extends 'base.html.twig' %}

{% block title %}Calendrier{% endblock %}

{% block body %}
    <h1>Calendrier des cours</h1>
    <div class="calendar-navigation">
        <a href="{{ path('app_calendar', {'week': currentWeek - 1}) }}" {% if currentWeek <= "now"|date("W")|number_format %}style="pointer-events: none; color: grey;"{% endif %}>Semaine précédente</a>
        <span>Semaine du {{ startOfWeek|date('d/m/Y') }} au {{ endOfWeek|date('d/m/Y') }}</span>
        <a href="{{ path('app_calendar', {'week': currentWeek + 1}) }}">Semaine suivante</a>
    </div>
    <div id="calendar">
        {% set daysOfWeek = ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi'] %}
        {% set currentDate = startOfWeek|date_modify('this week') %}
        <table>
            <thead>
                <tr>
                    <th>Heure</th>
                    {% for day in 0..5 %}
                        <th>{{ daysOfWeek[day] }}<br>{{ currentDate|date_modify('+' ~ day ~ ' day')|date('d/m') }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for hour in 9..20 %}
                <tr>
                    <td>{{ hour }}:00 - {{ hour + 1 }}:00</td>
                    {% for day in 0..5 %}
                        {% set currentDayDate = startOfWeek|date_modify('+' ~ day ~ ' day') %}
                        {% set pastTime = (currentDayDate|date('Y-m-d') < "now"|date('Y-m-d')) or (currentDayDate|date('Y-m-d') == "now"|date('Y-m-d') and hour < "now"|date('H')) %}
                    <td id="slot-{{ day }}-{{ hour }}">
                        {% set found = false %}
                        {% for session in classSessions %}
                            {% if session.dayOfWeek == day + 1 and session.startTime|date('H') == hour %}
                                <div class="session">
                                    <p>{{ session.name }}{% if session.getCurrentParticipants >= session.getMaxParticipants %} (Complet){% else %} - {{ session.getMaxParticipants - session.getCurrentParticipants }} places restantes{% endif %}</p>
                                    {% if session.getCurrentParticipants < session.getMaxParticipants %}
                                        {% if not pastTime %}
                                            <a href="{{ path('app_reserve', {'id': session.id}) }}" class="reserve-btn">Je réserve</a>
                                        {% else %}
                                            <button disabled>Passé</button>
                                        {% endif %}
                                    {% else %}
                                        <button disabled>Complet</button>
                                    {% endif %}
                                </div>
                                {% set found = true %}
                            {% endif %}
                        {% endfor %}
                        {% if not found %}
                            <p>Pas de cours</p>
                        {% endif %}
                    </td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
