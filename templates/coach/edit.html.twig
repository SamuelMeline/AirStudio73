{% extends 'base.html.twig' %}

{% block title %}Modifier Coach
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1>Modifier Coach</h1>

		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.name) }}
			{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.biography) }}
			{{ form_widget(form.biography, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group">
			{{ form_label(form.photo) }}
			{{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
		</div>

		<button type="submit" class="btn btn-primary">Enregistrer</button>
		{{ form_end(form) }}

		<a href="{{ path('coach_list') }}" class="btn btn-secondary mt-3">Annuler</a>
	</div>
{% endblock %}
