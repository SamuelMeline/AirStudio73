{% extends 'base.html.twig' %}

{% block title %}Liste des Coachs
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Liste des Coachs</h1>

		{% if is_granted('ROLE_ADMIN') %}
			<a href="{{ path('coach_new') }}" class="btn btn-primary mb-3">Ajouter un Coach</a>
		{% endif %}

		<div class="row">
			{% for coach in coaches %}
				<div class="col-md-4 mb-4">
					<div class="card">
						{% if coach.photo %}
							<img src="{{ asset('uploads/photos/' ~ coach.photo) }}" class="card-img-top" alt="{{ coach.name }}">
						{% endif %}
						<div class="card-body">
							<h5 class="card-title">{{ coach.name }}</h5>
							<p class="card-text">{{ coach.biography }}</p>
							{% if is_granted('ROLE_ADMIN') %}
								<a href="{{ path('coach_edit', {id: coach.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
								<a href="{{ path('coach_delete', {id: coach.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce coach ?');">Supprimer</a>
							{% endif %}
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
