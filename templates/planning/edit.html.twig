{% extends 'base.html.twig' %}

{% block title %}Modifier le Planning
{% endblock %}

{% block body %}
	<div class="container edit-planning mt-5">
		<div class="col col-md-12 mx-auto">
			<div class="card">
				<div class="card-body">
					<h1>Modifier le Planning</h1>

					{{ form_start(form) }}
					<div class="form-group">
						{{ form_label(form.day) }}
						{{ form_widget(form.day, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group">
						{{ form_label(form.startTime) }}
						{{ form_widget(form.startTime, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group">
						{{ form_label(form.endTime) }}
						{{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group">
						{{ form_label(form.courseName) }}
						{{ form_widget(form.courseName, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form-group">
						{{ form_label(form.instructor) }}
						{{ form_widget(form.instructor, {'attr': {'class': 'form-control'}}) }}
					</div>

					<button type="submit" class="btn btn-general mt-2">Enregistrer</button>
					{{ form_end(form) }}

					<a href="{{ path('planning') }}" class="btn complet mt-2">Annuler</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
