{% extends 'base.html.twig' %}

{% block body %}
<h1>Mon Forfait</h1>

{% if subscription %}
    <p>Forfait: {{ subscription.forfait }}</p>
    <p>Nombre de cours restants: {{ subscription.remainingCourses }}</p>
    <p>Date d'expiration: {{ subscription.expiryDate|date('d-m-Y') }}</p>
    <p>Mode de paiement: {{ subscription.paymentMode }}</p>
    <a href="{{ path('subscription_new', {'courseId': 1}) }}" class="btn btn-primary">Acheter plus de cours</a>
{% else %}
    <p>Vous n'avez pas de forfait actif.</p>
    <a href="{{ path('subscription_new', {'courseId': 1}) }}" class="btn btn-primary">Acheter un forfait</a>
{% endif %}
{% endblock %}
