{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reserve Course: {{ course.name }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.isRecurrent) }}
        <div id="num-occurrences-container" style="display: none;">
            {{ form_row(form.numOccurrences) }}
        </div>
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-primary">Reserve and Pay</button>
    {{ form_end(form) }}
{% endblock %}
