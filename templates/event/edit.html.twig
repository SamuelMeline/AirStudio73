{% extends 'base.html.twig' %}

{% block title %}
	{{ form.vars.value.id ? 'Modifier' : 'Créer' }}
	un Événement
{% endblock %}

{% block body %}
	<div class="container edit-event">
		<h1>{{ form.vars.value.id ? 'Modifier' : 'Créer' }}
			un Événement</h1>

		{{ form_start(form) }}
		<div class="form-group">
			{{ form_label(form.title) }}
			{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.title) }}
		</div>
		<div class="form-group">
			{{ form_label(form.description) }}
			{{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.description) }}
		</div>
		<div class="form-group">
			{{ form_label(form.startTime) }}
			{{ form_widget(form.startTime, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.startTime) }}
		</div>
		<div class="form-group">
			{{ form_label(form.endTime) }}
			{{ form_widget(form.endTime, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.endTime) }}
		</div>
		<div class="form-group">
			{{ form_label(form.location) }}
			{{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.location) }}
		</div>
		<div class="form-group mt-3">
			{{ form_label(form.photo) }}
			{{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
		</div>
		<button type="submit" class="btn btn-general mt-3 mb-3">Enregistrer</button>
		<a href="{{ path('event_list') }}" class="btn complet mt-3 mb-3">Annuler</a>
		{{ form_end(form) }}

	</div>
{% endblock %}
